<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widget"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.Miniprojekt.AppWidgetContainer">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:drawableStart="@mipmap/ic_launcher_foreground"
/>

    <Button
        android:id="@+id/button_add_item_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@id/textView"
        android:text="@string/button_widget"
        style="@style/Widget.AppCompat.Button"/>

</RelativeLayout>